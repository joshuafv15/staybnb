<% layout('layouts/boilerplate') %>
    <div class="bg-image" style="background-size: cover; 
background-image: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%,rgba(0,0,0,0.8) 100%), url('https://images.unsplash.com/photo-1612012921349-ddec45c8b3ab?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1556&q=80'); 
height: 100vh;">
        <div class="container ">
            <div class="row">
                <h3 class="text-white text-center mt-5">Edit User</h5>
                    <div class="col-3"></div>
                    <div class="card mt-3 col-6 border-2 border-dark   ">
                        <form action="/user/<%=id%>?_method=PUT " enctype="multipart/form-data" method="POST"
                            class="needs-validation" novalidate>
                            <div class="mb-3 mt-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" name="user[description]" id="description" rows="3"
                                    required><%=user.description%></textarea>
                            </div>
                            <% if(user.picture){ %>
                                <div class="mb-3">
                                    <img src="<%=user.picture.thumbnail%> " class="img-thumbnail">
                                </div>
                                <% } %>
                                    <div class="mb-3">
                                        <label for="image" class="form-label">Change Profile Picture</label>
                                        <input type="file" class="form-control" name="image" id="image">
                                    </div>
                                    <div>
                                        <button class="btn btn-primary mb-3">Edit Profile</button>
                                    </div>

                                    <div class="col-3"></div>
                        </form>
                    </div>
            </div>

        </div>
    </div>