<% layout('layouts/boilerplate') %>
    <div class="bg-image" style="background-size: cover; 
        background-image: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%,rgba(0,0,0,0.8) 100%), url('https://images.unsplash.com/photo-1612012921349-ddec45c8b3ab?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1556&q=80'); 
        height: 100vh;">
        <div class="container ">
            <div class="row">
                <h3 class="text-white text-center mt-5">Add a New Place</h5>
                    <div class="col-3"></div>
                    <div class="card mt-3 col-6 border-2 border-dark   ">
                        <form action="/places/new" method="POST" enctype="multipart/form-data" class="needs-validation"
                            novalidate>
                            <div class=" mb-3 mt-3 ">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="place[name]" required>
                            </div>
                            <div class=" mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="location" class="form-control" name="place[location]" id="location"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" name="place[description]" id="description" rows="3"
                                    required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Photos</label>
                                <input type="file" class="form-control" name="image" id="image" multiple>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="price">Price</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="price-label">$</span>
                                    <input class="form-control" type="number" min="0" id='price' name='place[price]'
                                        aria-label="price" aria-describedby="price-label" placeholder="0.00" required>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-primary mb-3">Submit</button>
                            </div>

                            <div class="col-3"></div>
                        </form>
                    </div>
            </div>

        </div>
    </div>